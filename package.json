{
  "name": "ruby",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "serve": "vue-cli-service serve --port 8080",
    "mock": "vue-cli-service serve --port 80 --mode mock",
    "build": "vue-cli-service build",
    "lint": "vue-cli-service lint",
    "view": "vue-helper-view",
    "component": "vue-helper-component",
    "filter": "vue-helper-filter",
    "module": "vue-helper-module",
    "model": "vue-helper-model",
    "ui": "vue-helper-ui",
    "service": "vue-helper-service",
    "mixin": "vue-helper-mixin",
    "gen-fonts": "node ./icons/app.font.js",
    "svg-fix": "svgo -f ./icons -o ./icons",
    "favicon": "node ./favicon/favicon.js",
    "touchall": "node touchall.js",
    "proxy": "node proxy.js"
  },
  "dependencies": {
    "axios": "^0.18.0",
    "axios-mock-adapter": "^1.16.0",
    "idle-js": "^0.1.3",
    "postcss": "^7.0.7",
    "postcss-preset-env": "^6.5.0",
    "postcss-responsive-type": "file:local_modules/postcss-responsive-type",
    "uuid": "^3.3.2",
    "vee-validate": "^2.1.5",
    "vue": "^2.5.21",
    "vue-element-loading": "^1.0.5",
    "vue-i18n": "^8.7.0",
    "vue-router": "^3.0.1",
    "vue-tidyroutes": "^0.1.2",
    "vuex": "^3.0.1"
  },
  "devDependencies": {
    "pug": "^2.0.3",
    "pug-plain-loader": "^1.0.0",
    "@vue/cli-plugin-babel": "^3.2.0",
    "@vue/cli-plugin-eslint": "^3.2.0",
    "@vue/cli-service": "^3.2.0",
    "@vue/eslint-config-prettier": "^4.0.1",
    "babel-eslint": "^10.0.1",
    "eslint": "^5.8.0",
    "eslint-plugin-vue": "^5.0.0",
    "vue-template-compiler": "^2.5.21",
    "@escofieldpublic/vue-file-helper": "^0.3.0",
    "raw-loader": "^0.5.1",
    "redbird": "^0.9.0",
    "webfonts-generator": "^0.4.0",
    "yaml-loader": "^0.5.0",
    "touch": "^3.1.0",
    "fs-walk": "0.0.2",
    "icon-gen": "^1.2.2",
    "json-loader": "^0.5.7"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "node": true
    },
    "extends": [
      "plugin:vue/essential",
      "@vue/prettier"
    ],
    "rules": {
      "semi": 0,
      "no-console": "off",
      "no-unused-vars": [
        "error",
        {
          "argsIgnorePattern": "^_",
          "varsIgnorePattern": "^_"
        }
      ]
    },
    "parserOptions": {
      "parser": "babel-eslint"
    }
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "all"
  },
  "postcss": {
    "plugins": {
      "autoprefixer": {},
      "postcss-mixins": {},
      "postcss-responsive-type": {},
      "postcss-preset-env": {
        "features": {
          "nesting-rules": true,
          "custom-media-queries": true,
          "color-mod-function": true
        }
      }
    }
  },
  "browserslist": [
    "> 1%",
    "not op_mini all",
    "not ie 11"
  ]
}
